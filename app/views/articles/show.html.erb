<% provide(:title, 'Article')%>
<p id="notice"><%= notice %></p>
<% if @article.image.attached? %>
  <p>
  <%= image_tag(@article.cover_image) %>
  </p>

  <p>
  <%= image_tag(@article.hero_image) %>
  </p>

<% else %>
  <%= image_tag(asset_path("default_article.jpg")) %>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<p>
  <strong>Author:</strong>
  <%= @article.author.name %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
<br>
<br>

<%= @article.votes_count %> votes |

<%= link_to 'like', article_vote_path(@article), method: :post%>

<%= link_to 'Dislike', article_vote_path(@article), method: :delete %>
